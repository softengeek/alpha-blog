<!DOCTYPE html>
<html>
<head>
  <title>AlphaBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(Array) %>
    <% msg.each do |name| %>
      <li><%= name %></li>
    <% end %>
  <% else %>
    <ul>
      <li><%= msg %></li>
    </ul>
  <% end %>
<% end %>
<%= yield %>

</body>
</html>
