<h1>Edit Article</h1>

<% if @article.errors.any? %>
  <h2>The following erros were found: </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |a| %>
  <p>
    <%= a.label :title %>
    <%= a.text_field :title %>
  </p>

  <p>
    <%= a.label :description %>
    <%= a.text_field :description %>
  </p>
  
  <p>
    <%= a.submit %>
  </p>
<% end %>

<%= link_to "Back to Articles", articles_path %>